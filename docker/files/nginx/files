server {
    listen 80;
    server_name _;

    # Folder to serve
    root /videos;

    # Enable automatic directory listing
    location / {
        autoindex on;                 # show list of files
        autoindex_exact_size off;     # show human-readable sizes (e.g., 1K, 2M)
        autoindex_localtime on;       # show local time for file timestamps
    }
}
